<% if @event.errors.any? %>
  <div id = "error_expanation" class = "text-center" >
  <h2><%= @event.errors.count %>件のエラー</h2>
    <ul style = "list-style: none;">
      <% @event.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

              
<div class="login">
  <div class="heading">
   <div class="event-form">
    <%= form_with(model:@event, local: true) do |form| %>
      <div class="field">
        <li><%= form.label :flyer %></li>
        <li><%= form.file_field :flyer %></li>
        <li><%= form.label :time_table %></li>
