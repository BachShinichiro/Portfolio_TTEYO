<p id="notice"><%= notice %></p>

<h1>Reservations</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |r| %>
      <tr>
        <td><%= r.date%></td>
        <td><%= r.ticket_type%></td>
        <td><%= r.number_of_ticket%></td>
        <td><%= r.total_price%></td>
        <td><%= r.remarks%></td>
        <td><%= r.cast_name%></td>
        <td><%= link_to 'Show', event_reservation_path(event_id: r.event_id, id: r.id) %></td>
        <td><%= link_to 'Edit', edit_event_reservation_path(event_id: r.event_id, id: r.id) %></td>
        <td><%= link_to 'Destroy', event_reservation_path(event_id: r.event_id, id: r.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Reservation', new_event_reservation_path %>
